{
    "compilerOptions": {
        "outDir": "build",
        "module": "ES2015",
        "target": "ES2015",
        "lib": ["esnext"],
        "sourceMap": true,
        "allowJs": false,
        "declaration": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": [
        "src"
    ],
    "exlude": [
        "node_modules"
    ]
}